{
  "extends": "solhint:recommended",
  "rules": {
    "func-visibility": ["error", { "ignoreConstructors": true }],
    "max-line-length": ["error", 80],
    "no-console": "warn",
    "not-rely-on-time": "error",
    "no-inline-assembly": "error",
    "avoid-low-level-calls": "warn",
    "avoid-suicide": "error",
    "avoid-sha3": "warn"
  }
}
